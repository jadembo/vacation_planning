<!-- Validation failure messages -->
<% if @request.errors.any? %>
  <% @request.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Request</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_request" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @request.user_id %>">
      </div>

      <!-- Label and input for allotment_id -->
      <div class="form-group">
        <label for="allotment_id" class="control-label">
          Allotment
        </label>

        <input type="text" id="allotment_id" name="allotment_id" placeholder="Allotment" class="form-control" value="<%= @request.allotment_id %>">
      </div>

      <!-- Label and input for length -->
      <div class="form-group">
        <label for="length" class="control-label">
          Length
        </label>

        <input type="text" id="length" name="length" placeholder="Length" class="form-control" value="<%= @request.length %>">
      </div>

      <!-- Label and input for type -->
      <div class="form-group">
        <label for="type" class="control-label">
          Type
        </label>

        <input type="text" id="type" name="type" placeholder="Type" class="form-control" value="<%= @request.type %>">
      </div>

      <button class="btn btn-success">
        Create Request
      </button>
      or
      <a href="/requests">Cancel</a>
    </form>
  </div>
</div>
