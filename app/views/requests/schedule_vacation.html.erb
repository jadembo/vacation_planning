<div class = "page-header">
  <h3> Schedule a Vacation Day </h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date</th>
        <th>Days available</th>
        <th>Request Vacation Day</th>
        <th>Request Personal Day</th>
        <th>Actions</th>
      </tr>

      <% @allotments_for_user.each do |allotment| %>
      <% days_available = allotment.days_available - @cohort_requests_full_days.where(:allotment_id => allotment.id).count - @cohort_requests_half_days.where(:allotment_id =>allotment.id).count * 0.5%>
      <% days_available_display = [days_available,0].max.to_f%>
      <tr>
        <td><%= allotment.date.strftime("%a %D") %></td>
        <td><%= days_available_display %></td>
          <%if days_available > 0%>
          <td>
              <a href ="/add_vacation_day" class = "btn btn-primary"> Schedule Vacation Day </a>
          </td>
          <td>
              <a href = "/add_personal_day" class = "btn btn-warning"> Schedule Personal Day </a>
          </td>
          <%else%>
          <td>
            <div class="btn btn-danger"> Vacation Day Unavailable </div>
          </td>
          <td>
            <a href = "/add_personal_day" class = "btn btn-warning"> Schedule Personal Day </a>
          </td>
          <%end%>
          <td>
          <a href="/allotments/<%= allotment.id %>" class="btn btn-primary">Show</a>
          <a href="/allotments/<%= allotment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_allotment/<%= allotment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>

      </tr>
      <% end %>
    </table>
  </div>
</div>
